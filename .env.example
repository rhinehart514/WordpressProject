# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ai_website_rebuilder?schema=public"

# Redis (for job queues)
REDIS_URL="redis://localhost:6379"

# Next.js
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# NestJS API
API_PORT=3001
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRATION="7d"

# WordPress Integration
WORDPRESS_DEFAULT_URL="https://your-wordpress-site.com"
WORDPRESS_API_KEY="your-wordpress-api-key"

# AI/LLM Configuration
# Choose ONE of the following options:

# Option 1: Ollama LOCAL (100% FREE, MOST PRIVATE, OFFLINE) ‚≠ê
# Install: https://ollama.com/download
# Run: ollama pull llama3.1:8b && ollama serve
# See: LOCAL_AI_SETUP.md for complete guide
OPENAI_API_KEY="ollama"
AI_BASE_URL="http://localhost:11434/v1"
OPENAI_MODEL="llama3.1:8b"
# Other local models: phi3:mini (2GB), mistral:7b, llama3.1:70b

# Option 2: Groq Cloud (100% FREE, FASTEST CLOUD)
# Sign up at https://console.groq.com (no credit card required)
# GROQ_API_KEY="your-groq-api-key"
# AI_BASE_URL="https://api.groq.com/openai/v1"
# OPENAI_MODEL="llama-3.1-70b-versatile"

# Option 3: Google Gemini (100% FREE - 1.5M requests/day)
# Get key at https://aistudio.google.com/app/apikey
# GEMINI_API_KEY="your-gemini-api-key"
# AI_BASE_URL="https://generativelanguage.googleapis.com/v1beta/openai/"
# OPENAI_MODEL="gemini-1.5-flash"

# Option 4: OpenRouter (FREE tier - multiple models)
# Sign up at https://openrouter.ai
# OPENAI_API_KEY="your-openrouter-api-key"
# AI_BASE_URL="https://openrouter.ai/api/v1"
# OPENAI_MODEL="meta-llama/llama-3.1-70b-instruct:free"

# Option 5: OpenAI (PAID - costs money)
# OPENAI_API_KEY="sk-your-openai-key"
# AI_BASE_URL=""
# OPENAI_MODEL="gpt-4o"

# Storage (S3 for preview assets)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-bucket-name"
AWS_REGION="us-east-1"

# Stripe (for billing)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Application
NODE_ENV="development"
LOG_LEVEL="debug"
